@using TastyOrders.Web.ViewModels.Restaurant;
@model RestaurantsWithLocationViewModel
        
@{
    ViewData["Title"] = "Restaurants in " + Model.SelectedLocation;
}

<h1>Restaurants in @Model.SelectedLocation</h1>

<form asp-action="Index" method="get">
    <input type="hidden" name="location" value="@Model.SelectedLocation" />
    <div class="input-group mb-4">
        <input type="text" id="searchInput" class="form-control" placeholder="Search by restaurant name..." />
    </div>
</form>

<div class="row" id="restaurantContainer">
    @if (!Model.Restaurants.Any())
    {
        <div class="col-12">
            <p class="text-muted text-center">No restaurants found matching your search criteria.</p>
        </div>
    }
    else
    {
        @foreach (var restaurant in Model.Restaurants)
        {   
            <div class="col-md-4 mb-4 restaurant-card" data-name="@restaurant.Name">
                <div class="card">
                    <img src="@restaurant.ImageUrl" class="card-img-top" alt="@restaurant.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title restaurant-name">@restaurant.Name</h5>
                        <p class="card-text">@restaurant.Location</p>
                        <a href="@Url.Action("Menu", "Menu", new { id = restaurant.Id })" class="btn btn-primary">View Menu</a>
                        <a asp-controller="Restaurant" asp-action="Details" asp-route-id="@restaurant.Id" class="btn btn-primary">View Reviews</a>
                    </div>
                </div>
            </div>
        }
    }
</div>

<script src="/js/search.js"></script>