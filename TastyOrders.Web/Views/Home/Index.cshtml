@{
    ViewData["Title"] = "Welcome to TastyOrders!";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header class="header-with-bg text-center">
    @* <header class="text-white text-center py-5" style="background: url('/images/background.jpg') no-repeat center center; background-size: cover;"> *@
        <div class="container">
            <h1 class="display-4 fw-bold">Welcome to TastyOrders</h1>
            <p class="lead">Your favorite restaurants, delivered to your doorstep!</p>
            <a asp-area="" asp-controller="Restaurant" asp-action="Index" class="btn btn-light btn-lg mt-3">Explore Restaurants</a>
        </div>
    </header>

    <section class="container my-5">
        <div class="row text-center">
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card border-0 shadow-sm w-100">
                    <img src="/images/indexRestaurant.jpg" class="card-img-top img-fluid" alt="Discover Restaurants" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Discover Restaurants</h5>
                        <p class="card-text">Find the best restaurants near you offering a variety of cuisines.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card border-0 shadow-sm w-100">
                    <img src="/images/delivery.jpg" class="card-img-top img-fluid" alt="Order Your Favorite Food" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Order Your Favorite Food</h5>
                        <p class="card-text">Easily place orders for delivery with just a few clicks.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card border-0 shadow-sm w-100">
                    <img src="/images/review.png" class="card-img-top img-fluid" alt="Leave Reviews" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Leave Reviews</h5>
                        <p class="card-text">Share your dining experience and help others find the best spots.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-light py-5">
        <div class="container text-center">
            <h2 class="mb-4">Why Choose TastyOrders?</h2>
            <div class="row">
                <div class="col-md-3">
                    <i class="bi bi-heart-fill text-danger fs-1"></i>
                    <h5 class="mt-3">Handpicked Restaurants</h5>
                    <p>We partner with top-rated restaurants to bring you the best dining experiences.</p>
                </div>
                <div class="col-md-3">
                    <i class="bi bi-truck text-primary fs-1"></i>
                    <h5 class="mt-3">Fast Delivery</h5>
                    <p>Enjoy hot and fresh food delivered to your doorstep in no time.</p>
                </div>
                <div class="col-md-3">
                    <i class="bi bi-wallet2 text-success fs-1"></i>
                    <h5 class="mt-3">Affordable Prices</h5>
                    <p>Great food doesn’t have to break the bank. Savor every bite!</p>
                </div>
                <div class="col-md-3">
                    <i class="bi bi-star-fill text-warning fs-1"></i>
                    <h5 class="mt-3">Trusted by Thousands</h5>
                    <p>Join a community of food lovers who trust TastyOrders for their cravings.</p>
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-dark text-white py-4">
        <div class="container text-center">
            <p>&copy; @DateTime.Now.Year TastyOrders. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
