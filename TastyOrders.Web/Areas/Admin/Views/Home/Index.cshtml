@{
    ViewData["Title"] = "Admin Dashboard";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

﻿<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4 text-primary fw-bold">Welcome to the Admin Dashboard</h1>
        <p class="lead mb-5 text-muted">Manage your application using the sections below:</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <div class="icon-container bg-primary text-white rounded-circle mb-3 d-flex justify-content-center align-items-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Manage Users</h5>
                    <p class="card-text text-muted">Add or remove users and assign roles.</p>
                    <a asp-area="Admin" asp-controller="Admin" asp-action="ManageRoles" class="btn btn-primary mt-auto w-100">
                        Go to Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <div class="icon-container bg-secondary text-white rounded-circle mb-3 d-flex justify-content-center align-items-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-utensils fa-2x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Manage Restaurants</h5>
                    <p class="card-text text-muted">Add and delete restaurants. Manage menus.</p>
                    <a asp-area="Admin" asp-controller="RestaurantManagement" asp-action="ManageRestaurants" class="btn btn-secondary mt-auto w-100">
                        Go to Restaurants
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <div class="icon-container bg-success text-white rounded-circle mb-3 d-flex justify-content-center align-items-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-comments fa-2x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Manage Reviews</h5>
                    <p class="card-text text-muted">Delete reviews from users.</p>
                    <a asp-area="Admin" asp-controller="ReviewManagement" asp-action="ManageReviews" class="btn btn-success mt-auto w-100">
                        Go to Reviews
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>