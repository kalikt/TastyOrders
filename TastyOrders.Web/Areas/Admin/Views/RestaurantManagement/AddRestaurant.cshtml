@{
    ViewData["Title"] = "Add Restaurant";
}

<h1>Add a New Restaurant</h1>

<form asp-action="AddRestaurant" asp-controller="RestaurantManagement" asp-area="Admin" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input type="text" id="location" name="location" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="imageUrl">Image URL (Optional)</label>
        <input type="text" id="imageUrl" name="imageUrl" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add Restaurant</button>
</form>
<a asp-action="ManageRestaurants" asp-controller="RestaurantManagement" asp-area="Admin" class="btn btn-secondary mt-2">Back to Manage Restaurants</a>
