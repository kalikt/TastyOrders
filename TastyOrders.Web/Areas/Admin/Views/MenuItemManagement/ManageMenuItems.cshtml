@using TastyOrders.Web.ViewModels.MenuItem;
@model ManageMenuItemsViewModel

@{
    ViewData["Title"] = "Manage Menu Items";
}

<h1>Manage Menu Items for @Model.RestaurantName</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var menuItem in Model.MenuItems)
        {
            <tr>
                <td>@menuItem.Name</td>
                <td>$@menuItem.Price</td>
                <td>@menuItem.Description</td>
                <td>
                    <form asp-action="EditMenuItem" asp-controller="MenuItemManagement" asp-area="Admin" method="get" class="d-inline">
                        <input type="hidden" name="menuItemId" value="@menuItem.Id" />
                        <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                    </form>
                    <form asp-action="RemoveMenuItem" asp-controller="MenuItemManagement" asp-area="Admin" method="post" class="d-inline">
                        <input type="hidden" name="menuItemId" value="@menuItem.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddMenuItem" asp-controller="MenuItemManagement" asp-area="Admin" asp-route-restaurantId="@Model.RestaurantId" class="btn btn-primary mt-3">Add New Menu Item</a>
<a asp-action="ManageRestaurants" asp-controller="RestaurantManagement" asp-area="Admin" class="btn btn-secondary mt-3">Back to Manage Restaurants</a>