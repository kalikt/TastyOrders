@using TastyOrders.Web.ViewModels.MenuItem;
@model EditMenuItemViewModel

@{
    ViewData["Title"] = "Edit Menu Item";
}
<link rel="stylesheet" href="~/css/editMenuItem.css" asp-append-version="true" />
<div class="container my-5">
    <h1 class="text-primary fw-bold mb-4">Edit Menu Item for <span class="text-secondary">@ViewBag.RestaurantName</span></h1>

    <form asp-action="EditMenuItem" asp-controller="MenuItemManagement" asp-area="Admin" method="post" class="mb-4">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="RestaurantId" />

        <div class="mb-3">
            <label for="name" class="form-label fw-bold">Name</label>
            <input type="text" id="name" asp-for="Name" class="form-control" placeholder="Enter menu item name" required />
        </div>

        <div class="mb-3">
            <label for="price" class="form-label fw-bold">Price</label>
            <input type="number" id="price" asp-for="Price" class="form-control" step="0.01" placeholder="Enter price" required />
        </div>

        <div class="mb-3">
            <label for="description" class="form-label fw-bold">Description</label>
            <textarea id="description" asp-for="Description" class="form-control" rows="4" placeholder="Enter a brief description" required></textarea>
        </div>

        <div class="mb-3">
            <label for="imageUrl" class="form-label fw-bold">Image URL (Optional)</label>
            <input type="text" id="imageUrl" asp-for="ImageUrl" class="form-control" placeholder="Enter image URL (if available)" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save Changes
            </button>
            <a asp-action="ManageMenuItems" asp-controller="MenuItemManagement" asp-area="Admin" asp-route-restaurantId="@Model.RestaurantId" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>