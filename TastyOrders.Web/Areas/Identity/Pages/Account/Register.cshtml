@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["ErrorMessage"]
    </div>
}
<link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
<div class="container my-5">
    <h1 class="text-primary fw-bold text-center mb-5">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="p-5 shadow rounded bg-light">
                <h2 class="text-secondary fw-bold text-center mb-4">Create a new account</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-4" role="alert"></div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary py-3">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}