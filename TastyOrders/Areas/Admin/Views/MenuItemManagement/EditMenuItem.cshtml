@using TastyOrders.Web.ViewModels.MenuItem;
@model EditMenuItemViewModel

@{
    ViewData["Title"] = "Edit Menu Item";
}

<h1>Edit Menu Item for @ViewBag.RestaurantName</h1>

<form asp-action="EditMenuItem" asp-controller="MenuItemManagement" asp-area="Admin" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="RestaurantId" />

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" id="price" asp-for="Price" class="form-control" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" asp-for="Description" class="form-control" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="imageUrl">Image URL (Optional)</label>
        <input type="text" id="imageUrl" asp-for="ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
    <a asp-action="ManageMenuItems" asp-controller="MenuItemManagement" asp-area="Admin" asp-route-restaurantId="@Model.RestaurantId" class="btn btn-secondary mt-2">Cancel</a>
</form>
