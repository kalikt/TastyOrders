@using TastyOrders.Web.ViewModels.Cart;
@model CartViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<h1>Your Cart</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>$@item.Price</td>
                <td>
                    <form asp-action="UpdateQuantity" method="post" style="display: inline-block;">
                        <input type="hidden" name="cartItemId" value="@item.Id" />
                        <input type="number" name="quantity" value="@item.Quantity" class="form-control" style="width: 80px; display: inline;" min="1" />
                        <button type="submit" class="btn btn-sm btn-primary">Update</button>
                    </form>
                </td>
                <td>$@(item.Price * item.Quantity)</td>
                <td>
                    <form asp-action="RemoveItem" method="post" style="display: inline-block;">
                        <input type="hidden" name="cartItemId" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end">
    <h4>Total: $@Model.Total</h4>
</div>

<a href="@Url.Action("Index", "Restaurant", new { location = Model.SelectedLocation })" class="btn btn-primary">Continue Shopping</a>
<a href="/Checkout" class="btn btn-success">Place Order</a>
