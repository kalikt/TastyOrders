@using TastyOrders.Web.ViewModels.Restaurant;
@model RestaurantDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1>@Model.Name</h1>
            <p><strong>Location:</strong> @Model.Location</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-8">
            <h2>Reviews</h2>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Review" asp-action="Create" asp-route-restaurantId="@Model.Id" class="btn btn-primary mb-3">Leave a Review</a>
            }         

            @if (!Model.Reviews.Any())
            {
                <p>No reviews yet. Be the first to leave a review!</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var review in Model.Reviews)
                    {
                        <li class="list-group-item">
                            <strong>@review.Rating/5</strong> - @review.Comment
                            <br />
                            <small>by @review.UserName on @review.CreatedAt.ToString()</small>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>
